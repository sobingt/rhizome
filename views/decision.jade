extends layout

block content
  header.row
    .small-12.columns
      ul.breadcrumbs
        li
          a(href='#') World
        li
          a(href='#') USA
        li
          a(href='#') California
        li
          a(href='#') Berkeley
        li.current
          a(href='#') What to do with the empty lot in Ridge?
  .row
    .small-8.columns#question
      h4 What to do with the empty lot in Ridge?
      p Let's replace the empty parking lot on Ridge Road with a good public space.
    .small-4.columns#info
      span
        | Started by 
        a(href='#') Carl Sagan
        | <br />
      span Ends in 4 days<br />
      span
        a(href='#') 42 participants
  .row
    .small-4.columns
      dl.sub-nav
        dd.new-tab
          a(href='#') New
        dd.unvoted-tab.active
          a(href='#') Unvoted
        dd.results-tab
          a(href='#') Partial results
    .small-2.columns
      p
        a(href='#', data-reveal-id='new-proposal').new-proposal-button.small.button.radius New proposal
    .small-6.columns
      h4.ranked-votes Your ranked votes
  .row#proposal-container
    .small-6.columns
      #proposal-list
    .small-6.columns
      #proposal-list-yes
      .proposal.remaining
        p (unvoted)
      #proposal-list-no
  .reveal-modal.large#new-proposal
    h4 New proposal
    label
    p
      label(for='title') Title
        input(type='text', placeholder='Title')
    p
      label(for='proposal') Proposal
        textarea(placeholder='Propose a new option')
    p
      a(href='#', data-reveal-id='new-proposal').new-proposal-button.small.button.radius Submit

block scripts
  script(src='/js/decision.js')