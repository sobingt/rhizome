doctype 5
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.min.css')
    link(rel='stylesheet', href='/css/ui-lightness/jquery-ui-1.9.2.custom.min.css')
    link(rel='stylesheet', href='/css/main.css')
    script(src='/js/vendor/custom.modernizr.js')
  body
    nav.top-bar
      ul.title-area
        li.name
          h1
            a(href='/') Rhizome
        li.toggle-topbar.menu-icon
          a(href='#')
            span Menu
      section.top-bar-section
        ul.right
          if user
            li.divider
            li.has-dropdown
              a(href='#') Groups
              ul.dropdown
                li
                  label Private
                each group in user.groups
                  li
                    a(href='/group/' + group.subdomain)= group.name
            li.divider
            li.has-dropdown
              a(href='#')= user.name
              ul.dropdown
                li
                  label Profile
                li
                  a(href='/logout') Logout
            li.divider
          else
            li.divider
            li
              a(href='/login') Sign in
            li.divider
            li
              a(href='/register') Register
            li.divider
    block content
    hr
    footer.row
      .small-6.columns
        span
          | Social Apps Lab at CITRIS, UC Berkeley &middot; 
          a(href='#') New BSD License
      .small-6.columns#menu
        a(href='#') About
        |  &middot; 
        a(href='#') Methodology
        |  &middot; 
        a(href='#') Source code
    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/jquery-ui-1.9.2.custom.min.js')
    script(src='/js/foundation.min.js')
    block scripts